/ end page title
.row
  .col-12
    .card
      .card-body
        - if params[:action] == 'new'
          - @meth = 'POST'
          - @urly = '/manage_users'
        - else
          - @meth = 'PUT'
          - @urly = "/manage_users/#{@user.id}"
        / end page title
        = form_for @user, url: @urly, method: @meth, class: 'form-horizontal' do |f|
          .mb-3
            = f.label :full_name, class: 'form-label'
            = f.text_field :full_name, class: 'form-control'
          .mb-3
            = f.label :email, class: 'form-label'
            = f.text_field :email, class: 'form-control'
          .mb-3
            = f.label :password, class: 'form-label'
            = f.text_field :password, class: 'form-control', autocomplete: "off"
          .mb-3
            = f.label :password_confirmation, class: 'form-label'
            = f.text_field :password_confirmation, class: 'form-control', autocomplete: "off"
          - if current_user.admin?
            .mb-3
              .form-check
                = f.check_box :admin, class: 'form-check-input'
                = f.label :admin, class: 'form-check-label'
          .mb-3
            = f.submit "Save", class: 'btn btn-primary btn-block'
