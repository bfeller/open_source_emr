/ end page title
.row
  .col-12
    .card
      .card-body
        = form_for @treatment, class: 'form-horizontal' do |f|
          .mb-3
            = f.label :diagnosis, class: 'form-label'
            = f.text_field :diagnosis, class: 'form-control'
          .mb-3
            = f.label :client, class: 'form-label'
            = f.text_field :client, class: 'form-control'
          .mb-3
            = f.label :user, class: 'form-label'
            = f.text_field :user, class: 'form-control'
          .mb-3
            = f.label :appointment, class: 'form-label'
            = f.text_field :appointment, class: 'form-control'
          .mb-3
            = f.label :name, class: 'form-label'
            = f.text_field :name, class: 'form-control'
          .mb-3
            = f.submit "Save", class: 'btn btn-success btn-block'
