/ navbar navigation component
%nav.navbar.navbar-expand-lg.navbar-white.bg-white{"data-controller" => "navbar"}
  %button#sidebarCollapse.btn.btn-light{"data-action" => "click->navbar#toggle_sidebar", :type => "button"}
    %i.fas.fa-bars
    %span
  #navbarSupportedContent.collapse.navbar-collapse
    %ul.nav.navbar-nav.ms-auto
      %li.nav-item.dropdown
        .nav-dropdown
          %a#nav2.nav-item.nav-link.dropdown-toggle.text-secondary{"aria-expanded" => "false", "data-bs-toggle" => "dropdown", :href => "#"}
            %i.fas.fa-user
            %span
              - if current_user.full_name.present?
                = current_user.full_name 
              - else
                = current_user.email
            %i.fas.fa-caret-down{:style => "font-size: .8em;"}
          .dropdown-menu.dropdown-menu-end.nav-link-menu
            %ul.nav-list
              %li
                %a.dropdown-item{:href => edit_manage_user_path(current_user.id)}
                  %i.fas.fa-cog
                  My Info
              .dropdown-divider
              %li
                = link_to destroy_user_session_path, method: :delete , class: 'dropdown-item' do
                  %i.fas.fa-sign-out-alt
                  Logout