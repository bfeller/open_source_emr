.page-title
  %h3
    Listing <%= plural_name.titleize %>
    = link_to new_<%= singular_name %>_path, class: 'btn btn-sm btn-outline-primary float-end' do
      %i.fas.fa-plus
      %span Add <%= singular_name.titleize %>

.row
  .col-12
    .box.box-primary
      .box-body
        %table.table.table-hover
          %thead
            %tr
  <% for attribute in attributes -%>
              %th <%= attribute.human_name %>
  <% end -%>
              %th
              %th

          %tbody
            - for <%= singular_name %> in @<%= plural_name %>
              %tr{ :class => cycle(:odd, :even) }
  <% for attribute in attributes -%>
                %td= <%= singular_name %>.<%= attribute.name %>
  <% end -%>
                %td
                  = link_to edit_<%= singular_name %>_path(<%= singular_name %>), class: 'btn btn-outline-info btn-rounded' do
                    %i.fas.fa-pen
                %td
                  = link_to <%= singular_name %>, :confirm => 'Are you sure?', :method => :delete, class: 'btn btn-outline-danger btn-rounded' do
                    %i.fas.fa-trash
