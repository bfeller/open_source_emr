/ end page title
.row
  .col-12
    .card
      .card-body
        = form_for @prescription, class: 'form-horizontal' do |f|
          .mb-3
            = f.label :appointment, class: 'form-label'
            = f.text_field :appointment, class: 'form-control'
          .mb-3
            = f.label :patient, class: 'form-label'
            = f.text_field :patient, class: 'form-control'
          .mb-3
            = f.label :notes, class: 'form-label'
            = f.text_area :notes, class: 'form-control'
          .mb-3
            = f.submit "Save", class: 'btn btn-success btn-block'
