/ end page title
.row
  .col-12
    .card
      .card-body
        = form_for @note, class: 'form-horizontal' do |f|
          .mb-3
            = f.label :appointment, class: 'form-label'
            = f.text_field :appointment, class: 'form-control'
          .mb-3
            = f.label :treatment, class: 'form-label'
            = f.text_field :treatment, class: 'form-control'
          .mb-3
            = f.label :user, class: 'form-label'
            = f.text_field :user, class: 'form-control'
          .mb-3
            = f.label :body, class: 'form-label'
            = f.rich_text_area :body, class: 'form-control'
          .mb-3
            = f.submit "Save", class: 'btn btn-success btn-block'
